load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "main.go",
        "multirun.go",
        "process.go",
    ],
    importpath = "github.com/ash2k/bazel-tools/multirun",
    deps = ["@io_bazel_rules_go//go/tools/bazel:go_default_library"],
